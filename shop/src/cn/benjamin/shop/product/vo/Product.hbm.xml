<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="cn.benjamin.shop.product.vo.Product" table="product">
        <id name="pid">
            <generator class="native"/>
        </id>
        <property name="pname"/>
        <property name="market_price"/>
        <property name="shop_price"/>
        <property name="image"/>
        <property name="pdesc"/>
        <property name="is_hot"/>
        <property name="pdate"/>

        <many-to-one name="categorySecond" lazy="false" class="cn.benjamin.shop.categorysecond.vo.CategorySecond" column="csid"></many-to-one>

    </class>
</hibernate-mapping>